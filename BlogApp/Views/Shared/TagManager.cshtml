@using BlogApp.ViewModels
@model IEnumerable<BlogApp.ViewModels.TagViewModel>

@{
    ViewData["Title"] = "Управление тегами";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>

            <!-- Форма добавления тега -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Добавить новый тег</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="Name">Название тега</label>
                            <input type="text" class="form-control" id="Name" name="Name" required>
                            <span class="text-danger" asp-validation-for="@(new TagViewModel().Name)"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Добавить</button>
                    </form>
                </div>
            </div>

            <!-- Список тегов -->
            <div class="card">
                <div class="card-header">
                    <h5>Список тегов</h5>
                </div>
                <div class="card-body">
                    @foreach (var tag in Model)
                    {
                        <div class="tag-item mb-3 d-flex justify-content-between align-items-center">
                            <span>@tag.Name</span>
                            <div class="d-flex align-items-center">
                                <!-- Форма редактирования с количеством статей СЛЕВА от инпута -->
                                <form asp-action="Edit" asp-route-id="@tag.Id" method="post" class="d-flex align-items-center">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="Id" value="@tag.Id">

                                    <!-- Количество статей СЛЕВА -->
                                    <span class="text-muted small mr-3 me-2">
                                        (@tag.PostCount
                                        @if (tag.PostCount % 10 == 1 && tag.PostCount % 100 != 11)
                                        {
                                            <text>статья</text>
                                        }
                                        else if (tag.PostCount % 10 >= 2 && tag.PostCount % 10 <= 4 &&
                                        (tag.PostCount % 100 < 10 || tag.PostCount % 100 >= 20))
                                        {
                                            <text>статьи</text>
                                        }
                                        else
                                        {
                                            <text>статей</text>
                                        })
                                    </span>

                                    <!-- Поле ввода -->
                                    <input type="text" name="Name" value="@tag.Name" class="form-control form-control-sm mr-2 me-2" style="width: 200px;">

                                    <!-- Кнопка "Сохранить" -->
                                    <button type="submit" class="btn btn-sm btn-outline-primary me-2">Сохранить</button>
                                </form>

                                <!-- Форма удаления -->
                                <form asp-action="Delete" asp-route-id="@tag.Id" method="post" class="ml-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@tag.Id">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}