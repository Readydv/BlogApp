@using BlogApp.ViewModels
@model IEnumerable<BlogApp.ViewModels.TagViewModel>

@{
    ViewData["Title"] = "Управление тегами";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>

            <!-- Форма добавления тега -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Добавить новый тег</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="Name">Название тега</label>
                            <input type="text" class="form-control" id="Name" name="Name" required>
                            <span class="text-danger" asp-validation-for="@(new TagViewModel().Name)"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Добавить</button>
                    </form>
                </div>
            </div>

            <!-- Список тегов -->
            <div class="card">
                <div class="card-header">
                    <h5>Список тегов</h5>
                </div>
                <div class="card-body">
                    @foreach (var tag in Model)
                    {
                        <div class="tag-item mb-2 d-flex justify-content-between align-items-center">
                            <span>@tag.Name</span>
                            <div>
                                <!-- Форма редактирования -->
                                <form asp-action="Edit" asp-route-id="@tag.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="Id" value="@tag.Id">
                                    <input type="text" name="Name" value="@tag.Name" class="form-control-sm">
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Сохранить</button>
                                </form>

                                <!-- Форма удаления -->
                                <form asp-action="Delete" asp-route-id="@tag.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@tag.Id">
                                    <button type="submit" class="btn btn-sm btn-outline-danger ml-2">Удалить</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}