@model BlogApp.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Все пользователи";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
    </div>

    @if (Model.Users.Any())
    {
        <div class="row">
            @foreach (var user in Model.Users)
            {
                <div class="col-md-12 mb-1">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="text-decoration-none">
                                    @user.UserName
                                </a>
                            </h5>

                            <div class="mb-2">
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge
                                          @(role == "Admin" ? "bg-danger" :
                                            role == "Moderator" ? "bg-warning" : "bg-secondary") me-1">
                                        @role
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="mt-1 mb-2 text-muted ps-3">
                            <!-- Увеличенный верхний отступ для email -->
                            @user.Email
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="ms-auto">
                                <!-- Добавлен ms-auto для выравнивания справа -->
                                <form asp-action="Delete" asp-controller="User" asp-route-id="@user.Id"
                                      method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger mb-3 me-3"
                                            onclick="return confirm('Вы уверены, что хотите удалить пользователя @user.UserName?')">
                                        <i class="fas fa-trash-alt"></i> Удалить
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Пользователи не найдены</div>
    }
</div>