@using System.Security.Claims
@model BlogApp.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <article class="blog-post">
        <h1 class="blog-post-title">@Model.Title</h1>
        <p class="blog-post-meta">
            @Model.CreatedDate.ToString("dd MMMM yyyy") •
            Автор: @Model.Author?.UserName •
            Просмотров: @Model.ViewCount
        </p>

        <div class="mb-3">
            @foreach (var postTag in Model.PostTags)
            {
                <span class="badge bg-secondary me-1">@postTag.Tag.Name</span>
            }
        </div>

        <div class="blog-post-content">
            @Html.Raw(Model.Content.Replace(Environment.NewLine, "<br />"))
        </div>
    </article>

    <!-- Секция комментариев -->
    <div class="mt-5 border-top pt-4">
        <h3 class="mb-4">Комментарии (@Model.Comments?.Count)</h3>

        @if (Model.Comments != null && Model.Comments.Any())
        {
            foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedDate))
            {
                <div class="card mb-3" id="comment-@comment.Id">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <span class="fw-bold">@comment.Author?.UserName</span>
                                <span class="text-muted ms-2">@comment.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            @if (User.Identity.IsAuthenticated &&
                           (User.IsInRole("Admin") || User.IsInRole("Moderator") || comment.AuthorId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
                            {
                                <form asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Вы уверены, что хотите удалить этот комментарий?')">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            }
                        </div>
                        <p class="card-text mt-2">@comment.Content</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Пока нет комментариев. Будьте первым!</p>
        }

        @if (User.Identity.IsAuthenticated)
        {
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Добавить комментарий</h5>
                    <form asp-controller="Comment" asp-action="Create" method="post">
                        <input type="hidden" name="PostId" value="@Model.Id" />
                        <div class="form-group mb-3">
                            <textarea name="Content" class="form-control" rows="3"
                                      placeholder="Напишите ваш комментарий..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Отправить
                        </button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-4">
                <a asp-controller="Auth" asp-action="Login" class="alert-link">Войдите</a>, чтобы оставить комментарий
            </div>
        }
    </div>

    <div class="mt-5">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Назад к списку статей
        </a>

        @if (User.Identity.IsAuthenticated &&
        (User.IsInRole("Admin") || User.IsInRole("Moderator") || Model.AuthorId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning ms-2">
                <i class="fas fa-edit"></i> Редактировать
            </a>
        }
    </div>
</div>