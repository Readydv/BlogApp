@model BlogApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Регистрация</h1>

        <form asp-action="Register" method="post" class="auth-form">
            <div class="form-group">
                <label asp-for="UserName" class="form-label">Имя пользователя</label>
                <input asp-for="UserName" class="form-input" placeholder="Придумайте логин">
                <span asp-validation-for="UserName" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-input" type="email" placeholder="Введите ваш email">
                <span asp-validation-for="Email" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input asp-for="Password" class="form-input" type="password" placeholder="Придумайте пароль">
                <span asp-validation-for="Password" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Подтвердите пароль</label>
                <input asp-for="ConfirmPassword" class="form-input" type="password" placeholder="Повторите пароль">
                <span asp-validation-for="ConfirmPassword" class="form-error"></span>
            </div>

            <button type="submit" class="auth-button">Зарегистрироваться</button>
        </form>

        <div class="auth-footer">
            Уже есть аккаунт? <a asp-action="Login" class="auth-link">Войдите</a>
        </div>
    </div>
</div>